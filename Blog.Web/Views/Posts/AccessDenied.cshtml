@model Post
@{
    ViewData["Title"] = "Acesso Negado";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="alert alert-danger" role="alert">
                <h2 class="display-4">🚫 Acesso Negado</h2>
                <p class="lead">Você não tem permissão para editar este post.</p>
                <hr>
                <p>Este post pertence a outro autor.</p>
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-primary">Voltar para Lista de Posts</a>
                </div>
            </div>
        </div>
    </div>
</div>